[user]
    name = Tim Goodwin
    email = timg.goodwin@gmail.com
[push]
    default = simple
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true

[alias]
    co = checkout && git submodule update
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    le = log --oneline --decorate
    log = log -- decorate
    pull = pull && git submodule update
    f = "!git ls-files | grep -i"
    b = branch
    s = status -s -b
    la = "!git config -l | grep alias | cut -c 7-"
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    current = rev-parse --abbrev-ref HEAD
    remote-diff = !CURRENT=$(git current) && git diff $CURRENT $1/$CURRENT
    du = diff @{upstream}
    dp = !CURRENT=$(git current) && git diff prod $CURRENT -- $1

[color]
    ui = auto
[color "branch"]
    current = green
    local = yellow
    remote = cyan
[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[color "diff"]
    meta = magenta bold
    frag = cyan ul #bold
    old = red #reverse
    new = green #reverse
    whitespace = blue reverse
