#!/usr/bin/env bash

function delete-branches() {
  git branch |
    grep -v '\*' |
    cut -c 3- |
    fzf --multi |
    gxargs --no-run-if-empty git branch --delete --force
}

function git-checkout() {
  if [[ $# -eq 0 ]]; then
      git branch |
        cut -c 3- |
        fzf --multi |
        gxargs --no-run-if-empty git checkout
  else
    git checkout $1
  fi
}
